<div class="ui one column centered grid">
  <div class="column six wide form-holder">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form segment"}) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <%= f.label "邮箱" %>
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.email_field :email, autofocus: true, placeholder: "请输入邮箱" %>
        </div>
      </div>

      <div class="field">
        <%= f.label "密码" %>
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password, autocomplete: "off", placeholder: "请输入密码" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="inline field">
          <div class="ui checkbox">
            <%= f.check_box :remember_me %>
            <%= f.label "记住我" %>
          </div>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "登录", class: "ui fluid large teal submit button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
