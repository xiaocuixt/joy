<div class="ui one column centered grid">
  <div class="column six wide form-holder">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "ui form segment"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label "邮箱" %>
        <div class="ui left icon input">
          <i class="user icon"></i>
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="field">
        <%= f.label "密码" %>
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <div class="field">
        <%= f.label "确认密码" %>
        <div class="ui left icon input">
          <i class="lock icon"></i>
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "注册", class: "ui fluid large teal submit button" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
